#!/bin/sh

# To be called from inside a TiddlyWikiFolder, see https://tiddlywiki.com/#TiddlyWikiFolders

TWJS="/home/sascha/ar/Dokumente/sw/TW5/tiddlywiki.js"

if [ -z "$1" ]; then
    "$TWJS" --help
    exit 1
fi

CMD="$1"
shift

case "$CMD" in
"test")
    "$TWJS" +plugins/tiddlywiki/jasmine --build test
    ;;
"serve" | "index" | "license")
    "$TWJS" --build "$CMD" "$@"
    ;;
*)
    "$TWJS" "$CMD" "$@"
    ;;
esac
